{
  "actions": [
    {
      "args": [
        "-lc",
        "bash release.sh"
      ],
      "command": "bash",
      "env": {
        "LOADER": "{LOADER}",
        "MC_VERSION": "{mcVersion}",
        "UEBLICHE_BUILD_TAG": "{UEBLICHE_BUILD_TAG}",
        "BUILD_TAG": "{UEBLICHE_BUILD_TAG}",
        "TAG": "{UEBLICHE_BUILD_TAG}"
      },
      "s3Select": false,
      "s3": {
        "storeId": "s3-1768566992434",
        "bucket": "updates-uebliche",
        "prefix": ""
      },
      "label": "Deploy hub",
      "data": {
        "UPDATE_LOADER_MANIFEST": "1",
        "CLEAN_RELEASE_DIR": "1",
        "CLEAN_RELEASE_DIR_AFTER": "1"
      },
      "uploads": [
        {
          "path": "release/**",
          "key": "{S3_PROJECT}/{UPDATE_CHANNEL}/{relpath}"
        }
      ],
      "deployTargets": {
        "key": "DEPLOY_TARGETS",
        "options": [
          "s3",
          "modrinth"
        ],
        "defaults": [
          "s3"
        ],
        "remember": true,
        "title": "Deploy targets",
        "separator": ","
      },
      "targetSelect": {
        "key": "LOADER",
        "options": [
          "forge",
          "neoforge",
          "velocity",
          "paper",
          "minestom"
        ],
        "defaults": [
          "velocity"
        ],
        "remember": true,
        "title": "Deploy loaders",
        "channelKey": "UPDATE_CHANNEL",
        "channelOptions": [
          "release",
          "beta"
        ],
        "channelDefault": "release",
        "channelTitle": "Channel",
        "separator": ","
      }
    }
  ],
  "defaults": {
    "loader": "velocity",
    "runMode": "server"
  },
  "gradleArgs": [
    "--build-cache",
    "--parallel",
    "-PmcVersion={mcVersion}"
  ],
  "group": "uebliche/public",
  "id": "mod/hub",
  "kind": "project",
  "loaderDirPrefix": "loader-",
  "loaderSource": "directory",
  "changelogPath": "../../docs/hub/changelog.md",
  "loaderVersions": {
    "minestom": [
      "1.21.11"
    ],
    "minestom-ffa": [
      "1.21.11"
    ]
  },
  "modrinth": {
    "pageType": "plugin",
    "projectId": "HrTclB8n"
  },
  "name": "Hub",
  "runModes": [
    "server"
  ],
  "tasks": {
    "build": "build",
    "runServer": "runVelocity",
    "template": ":loader-{loader}:{task}"
  },
  "vars": [
    {
      "default": "release",
      "key": "UPDATE_CHANNEL",
      "label": "Update channel",
      "options": [
        "release",
        "beta"
      ]
    },
    {
      "default": "hub",
      "key": "S3_PROJECT",
      "label": "S3 project prefix"
    }
  ]
}
